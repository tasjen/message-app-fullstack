events {
}

http {
  server {
    listen 80;
    access_log off;
    include /etc/nginx/conf.d/gzip.conf;

    location / {
      proxy_pass http://view:3000;
      proxy_http_version 1.1;
    }

    location /api/auth/ {
      proxy_pass http://auth:3000/;
      proxy_http_version 1.1;
    }

    location /api/streaming/ {
      proxy_pass http://streaming:3000/;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "Upgrade";
      proxy_read_timeout 24h;
    }

    location /api/grpc-web/ {
      proxy_pass http://envoy:3000/;
      proxy_http_version 1.1;
    }

    location /pgadmin/ {
      # for letting nginx start even if pgadmin isn't up
      set $upstream_pgadmin pgadmin;
      proxy_pass http://$upstream_pgadmin:80/;

      proxy_set_header X-Script-Name /pgadmin;
      proxy_set_header X-Scheme $scheme;
      proxy_set_header Host $http_host;
      proxy_redirect off;
    }

    location /_next/webpack-hmr {
      proxy_pass http://view:3000/_next/webpack-hmr;
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection 'Upgrade';
      proxy_set_header Host $host;
      proxy_read_timeout 24h;
    }

  }
}